<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.github.sparkbwa</groupId>
  <artifactId>SparkBWA</artifactId>
  <version>jdk-17-spark-4</version>

  <repositories>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
  </repositories>

  <!-- 所有属性统一放在一个 properties 中 -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.release>17</maven.compiler.release>
    <scala.binary.version>2.13</scala.binary.version>
    <spark.version>4.0.1</spark.version> <!-- 按需修改为你的实际 Spark 4 版本 -->
    <my.native.path>./src/main/native/</my.native.path>
    <!-- 可选，加速插件解析 -->
    <maven.resolver.transport>wagon</maven.resolver.transport>
  </properties>

  <dependencies>
    <!-- Spark 4.x 依赖（集群提供，应用侧用 provided） -->
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-core_${scala.binary.version}</artifactId>
      <version>${spark.version}</version>
      <scope>provided</scope>
    </dependency>
    <!-- Apache Commons CLI: provides org.apache.commons.cli.Options, CommandLine, etc. -->
<dependency>
  <groupId>commons-cli</groupId>
  <artifactId>commons-cli</artifactId>
  <version>1.6.0</version> <!-- 或 1.5.0；1.6.0 是较新稳定版 -->
</dependency>

    <!-- 如需 Spark SQL，再加（可选）
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-sql_${scala.binary.version}</artifactId>
      <version>${spark.version}</version>
      <scope>provided</scope>
    </dependency>
    -->

    <!-- 你的 JNI 辅助库（JitPack 提交号） -->
    <dependency>
      <groupId>com.github.adamheinrich</groupId>
      <artifactId>native-utils</artifactId>
      <version>e6a3948</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- 用 JDK 17 编译 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>

      <!-- JNI 本地代码构建（保留原逻辑） -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.5.0</version>
        <executions>
          <execution>
            <id>makeBwa</id>
            <phase>compile</phase>
            <goals><goal>exec</goal></goals>
            <configuration>
              <executable>make</executable>
              <arguments>
                <argument>-C</argument>
                <argument>${my.native.path}</argument>
              </arguments>
            </configuration>
          </execution>
          <execution>
            <id>makeBwaClean</id>
            <phase>clean</phase>
            <goals><goal>exec</goal></goals>
            <configuration>
              <executable>make</executable>
              <arguments>
                <argument>clean</argument>
                <argument>-C</argument>
                <argument>${my.native.path}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- 升级 shade 插件以兼容 JDK 17 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals><goal>shade</goal></goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>cz.adamh.utils:native-utils</include>
                </includes>
                <excludes>
                  <exclude>META-INF/*.DSA</exclude>
                  <exclude>META-INF/*.RSA</exclude>
                  <exclude>META-INF/*.SF</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- 如果项目里有 Scala 源码，解开此插件；若全是 Java 可忽略
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>4.9.2</version>
        <executions>
          <execution>
            <id>scala-compile</id>
            <phase>process-resources</phase>
            <goals><goal>compile</goal></goals>
            <configuration>
              <scalaVersion>2.13.14</scalaVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      -->
    </plugins>
  </build>
</project>